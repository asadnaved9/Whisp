<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Whisp</title>
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
    <link
      href="https://cdn.jsdelivr.net/npm/remixicon@4.7.0/fonts/remixicon.css"
      rel="stylesheet"
    />
  </head>
  <body>
    <div class="w-full min-h-screen bg-zinc-900 text-white p-10">
      <div class="w-full flex justify-end">
        <a
          class="bg-red-400 px-3 py-2 text-sm rounded-md mb-5 inline-block"
          href="/logout"
          ><i class="ri-logout-box-r-line"></i
        ></a>
      </div>
      <h3 class="text-3xl">
        <span class="font-light"> Hello, </span><%= user.name %>ğŸ‘‹ğŸ»
      </h3>
      <h5 class="mb-5 text-zinc-400">You can create a new post.</h5>
      <form action="/post" method="post">
        <textarea
          placeholder="What's in your mind?"
          class="block w-72 lg:w-1/2 resize-none bg-zinc-800 border-2 border-zinc-700 rounded-md p-2 outline-none text-zinc-300"
          name="content"
        ></textarea>
        <input
          class="px-3 w-40 py-2 bg-blue-500 block mt-2 rounded-md text-sm"
          type="submit"
          value="Create new Post"
        />
      </form>
      <div class="posts mt-18">
        <h3 class="text-zinc-400 inline-block">
          Your Posts<i class="ri-home-line"></i>
        </h3>
        <span
          ><a class="text-cyan-400 mb-5 inline-block underline" href="/feed"
            >Explore Feed</a
          ></span
        >
        <div class="postcontainer mt-5">
          <% user.posts.reverse().forEach(function(post){ %>
          <div
            class="post mb-4 w-72 lg:w-1/2 p-4 border-2 border-zinc-700 rounded-md bg-zinc-800"
          >
            <h4 class="text-blue-400 mb-2">@<%= user.username %></h4>
            <p class="text-sm tracking-tight"><%= post.content %></p>
            <small class="mt-4 inline-block"
              ><%= post.likes.length %> Likes</small
            >
            <div class="btns flex mt-1 gap-4">
              <a
                class="<%= post.likes.indexOf(user._id) === -1 ? 'text-blue-500' : 'text-red-500' %>"
                href="/like/<%= post._id %>"
                ><%= post.likes.indexOf(user._id) ? "Like" : "Unlike" %></a
              >
              <!-- From this we will get post._id as a like button is clicked -->
              <a class="text-zinc-400 ml-auto" href="/edit/<%= post._id %>"
                >Edit</a
              >
            </div>
          </div>
          <% }) %>
        </div>
      </div>
    </div>
  </body>
</html>
